# Database settings (applicable to both PostgreSQL and API)
DB_USER=todo_user          # Username for connecting to the PostgreSQL database
DB_PASSWORD=todo_pass      # Password for the database user
DB_NAME=todo_db            # Name of the database used by the application
DB_HOST=db                 # Hostname of the database, could be 'localhost', 'db', or an IP address
DB_PORT=5432               # Port where PostgreSQL is running (default is 5432)

# Superuser password for PostgreSQL
POSTGRES_PASSWORD=todo_pass # Password for the PostgreSQL superuser, used during database initialization

# JWT secret key
JWT_SECRET=super_secret_key # Secret key used for signing JWT tokens for user authentication

# API port
PORT=5000                   # Port on which the API server will be running
